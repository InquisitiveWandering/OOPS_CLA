/* Model a class BankAccount with the following: 
Data members: accountNumber, accountHolderName, balance Methods: deposit(), withdraw(), display() 
Use the concept of data hiding to restrict direct access to the balance. */

#include <iostream>
using namespace std;

class BankAccount {
    int accountNumber;
    string accountHolderName;
    float balance;   // private for data hiding

public:
    void setAccount(int accNo, string name, float bal) {
        accountNumber = accNo;
        accountHolderName = name;
        balance = bal;
    }

    void deposit(float amount) {
        balance += amount;
    }

    void withdraw(float amount) {
        if (amount <= balance)
            balance -= amount;
        else
            cout << "Insufficient balance!" << endl;
    }

    void display() {
        cout << "Account No: " << accountNumber << endl;
        cout << "Name: " << accountHolderName << endl;
        cout << "Balance: " << balance << endl;
    }
};

int main() {
    BankAccount b;
    b.setAccount(1001, "Alice", 5000);
    b.deposit(2000);
    b.withdraw(1000);
    b.display();
    return 0;
}
